---
import SafeHeader from '@/components/SafeHeader.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title><slot name="title" />Flax Lignan Health</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Source+Sans+3:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
      :root {
        --font-body: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        --font-head: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        --ink: #0f172a; --ink-muted: #64748b; --bg: #f8fafc;
      }
      body { margin: 0; font-family: var(--font-body); background: var(--bg); color: var(--ink); }

      /* page shell */
      main, footer { max-width: 1100px; margin: 0 auto; }
      /* offset for fixed header height (~56px) */
      main { padding: 80px 16px 56px; } /* top padding increased to clear fixed header */
      footer { padding: 16px; color: var(--ink-muted); }

      /* global heading look */
      h1, h2, h3, h4, .brand-title, .products-title, .site-title {
        font-family: var(--font-head); line-height: 1.15; letter-spacing: -0.01em;
      }
      h1, .site-title, h2, .products-title { font-weight: 700; }
      h3, h4 { font-weight: 600; }

      /* --- anti-overlay sledgehammer --- */
      /* Any old hero overlay/buttons that might still exist */
      .hero-actions, .hero-cta, .quick-actions { display: none !important; }
      /* Background layers never intercept clicks */
      .hero-bg, .hero::before, .hero::after { pointer-events: none !important; }
      /* Ensure hero content is stacked sanely */
      .hero, .hero-inner, .hero-card { position: relative; z-index: 1; }
      /* Make bottom blog teaser clickable above any leftovers */
      .blog-update-wrap, .blog-update { position: relative; z-index: 5; }
    </style>
  </head>

  <body>
    <SafeHeader />

    <main>
      <slot />
    </main>

    <footer>
      Â© {new Date().getFullYear()} Flax Lignan Health
    </footer>
  </body>
</html>
