---
const title = "Coupons | Flax Lignan Health";
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body class="min-h-screen">
    <!-- reuse your header -->
    <header style="max-width:1100px;margin:1rem auto;padding:0 1rem;">
      <div style="display:flex;align-items:center;gap:24px;justify-content:flex-start;">
        <a href="/" style="display:inline-flex;align-items:center;gap:.5rem;text-decoration:none;color:inherit">
          <img src="/images/logo.png" alt="Flax Lignan Health" style="height:40px;width:auto;display:block" />
        </a>
        <nav style="display:flex;gap:16px;font-weight:700;flex-wrap:wrap;">
          <a href="/">Home</a>
          <a href="/products">Products</a>
          <a href="/coupons" aria-current="page">Coupons</a>
        </nav>
      </div>
    </header>

    <main style="max-width:1100px;margin:2rem auto;padding:0 1rem;">
      <h1 style="font-size:2rem;margin-bottom:.75rem;">Coupons</h1>
      <p style="font-size:1.05rem;line-height:1.5;margin:0 0 1rem 0;">
        Join our email list to receive coupons and special offers.
      </p>
      <a
        href="https://YOUR-CONSTANT-CONTACT-LINK"
        target="_blank"
        rel="noopener"
        style="
          display:inline-block;
          text-decoration:none;
          background:#111827;
          color:#fff;
          border:1px solid #111827;
          padding:.7rem 1rem;
          border-radius:10px;
          font-weight:700;
        "
      >
        Go to Sign-Up
      </a>
    </main>
  </body>
</html>
