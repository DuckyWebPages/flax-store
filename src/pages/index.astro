---
import BaseLayout from '@/layouts/BaseLayout.astro';
const pageTitle = 'Home â€” ';
---

<BaseLayout>
  <Fragment slot="title">{pageTitle}</Fragment>

  <section class="hero" aria-label="Flax Lignan Health hero">
    <img class="hero-bg" src="/images/hero-1600.jpg?v=21" alt="" />

    <div class="hero-inner">
      <div class="hero-card">
        <h1 class="site-title">Flax Lignan Health</h1>
        <p>
          Your research-driven source for natural products promoting health, vitality and immune system support.<br />
          <strong>Order online or call <a href="tel:18177106918">817-710-6918</a>.</strong>
        </p>

        <!-- single Shop CTA under the tagline -->
        <nav class="home-shop-cta" aria-label="Shop">
          <a href="/products" class="cta-btn">Shop</a>
        </nav>
      </div>
    </div>
  </section>

  <style>
    .hero{
      position:relative;isolation:isolate;overflow:hidden;
      min-height:clamp(420px,62vh,680px);
      padding:56px 16px 56px;border-bottom:1px solid #e5e7eb;display:block;
    }
    .hero-bg{position:absolute;inset:0;width:100%;height:100%;object-fit:cover;z-index:-1}
    .hero-inner{position:relative;max-width:1100px;margin:0 auto;z-index:1}
    .hero-card{
      display:inline-block;max-width:760px;background:rgba(255,255,255,.62);
      -webkit-backdrop-filter:blur(8px);backdrop-filter:blur(8px);
      border-radius:14px;padding:16px 20px;box-shadow:0 6px 18px rgba(0,0,0,.10);
    }
    .site-title{
      font-size:clamp(2.2rem,4.2vw,3.2rem);font-weight:700;letter-spacing:-.01em;line-height:1.1;color:#000;margin:0 0 .25rem;
    }
    .hero-card p{font-weight:300;line-height:1.6;font-size:clamp(1rem,1.2vw + .8rem,1.125rem);color:#000;margin:.5rem 0 0;max-width:720px}
    .hero-card p a{color:inherit;text-decoration:underline}

    .home-shop-cta{position:static;margin-top:12px;display:inline-flex}
    .cta-btn{
      display:inline-flex;align-items:center;justify-content:center;min-width:120px;padding:10px 16px;
      font:700 16px/1 Inter,system-ui,-apple-system,"Segoe UI",Roboto,Helvetica,Arial,sans-serif;
      color:#fff;background:#111827;text-decoration:none;border:0;border-radius:9999px;box-shadow:0 6px 18px rgba(0,0,0,.18);
      user-select:none;-webkit-tap-highlight-color:transparent;white-space:nowrap;transition:transform .08s ease,opacity .15s ease;
    }
    .cta-btn:hover{opacity:.92;transform:translateY(-1px)}

    @media (max-width:768px){
      .hero{padding:36px 16px 48px}
      .hero-card{padding:12px 14px;border-radius:12px}
    }
  </style>
</BaseLayout>
