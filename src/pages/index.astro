/* 1) Load Inter (body) + Source Sans 3 (headings/brand) */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500&family=Source+Sans+3:wght@400;600;700&display=swap');

/* ---------- Site-wide body defaults ---------- */
html, body {
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-weight: 400;
}
p, li { line-height: 1.6; }

/* Smaller / subtle text */
small, .subtle, .muted, .fineprint {
  font-size: 0.9rem;
  font-weight: 300;
  opacity: 0.9;
}

/* ---------- Home hero ---------- */
h1.site-title {
  font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-size: clamp(2.2rem, 4.2vw, 3.2rem);
  font-weight: 700;               /* was 400; Source Sans 3 looks better bold for titles */
  letter-spacing: -0.01em;
  line-height: 1.1;
  color: black;   /* title is black */
}

.hero p {
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-weight: 300;
  color: #222;    /* darker gray (nearly black) */
}

/* ---------- Header / Nav ---------- */
.logo-text {
  /* If you want this hidden everywhere, uncomment the next line */
  /* display: none !important; */
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-size: 1.2rem;
  font-weight: 400;
  letter-spacing: 0.01em;
  color: black;
  display: inline-block;
}

nav a {
  /* Use Inter for the top tabs */
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-size: 1.05rem;
  font-weight: 400;
  letter-spacing: 0.02em;
  text-transform: uppercase;
  text-decoration: none;
  color: inherit;
}
nav a:hover { opacity: 0.85; }

/* Hide logo text on small screens */
.logo-text { display: none; }
@media (min-width: 768px) {
  .logo-text {
    display: inline-block;
    margin-left: 0.25rem;
  }
}

/* ---------- Products page header ---------- */
.products-title {
  font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-size: 2rem;
  font-weight: 700;               /* was 400; stronger section heading */
  letter-spacing: -0.01em;
  margin-bottom: 1rem;
}

/* ---------- Products grid body copy (inside React island) ---------- */
/* Wrap your <ShopApp /> with <div class="shop-app-root"> ... </div> */
.shop-app-root p,
.shop-app-root li,
.shop-app-root small,
.shop-app-root .desc,
.shop-app-root .fineprint,
.shop-app-root .muted {
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif !important;
  font-weight: 300;
  line-height: 1.6;
}

/* Front-page BLOG UPDATE link uses Source Sans 3 (formerly Genuine) */
.blog-update {
  display: inline-flex;
  align-items: center;         /* centers text on flower vertically */
  gap: 12px;
  font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
  font-weight: 600;            /* give it presence */
  letter-spacing: 0.02em;
  font-size: clamp(1.3rem, 2.8vw, 1.8rem);
  line-height: 1;
  text-decoration: none;
}
.blog-update:hover { text-decoration: underline; opacity: .95; }

/* Icon scales with the text and sits dead-center */
.blog-icon {
  width: 1.6em; 
  height: 1.6em;
  flex: 0 0 auto;
  transform: translateY(0.02em); /* micro-adjust for optical centering */
}

/* Stacked version: flower on top, text centered under it */
.blog-update--stacked {
  flex-direction: column;
  gap: 10px;
  text-align: center;
}
.blog-update--stacked .blog-icon {
  width: 2.2em;
  height: 2.2em;
}

/* Improve blog readability */
.blog-content p, .blog-content li { line-height: 1.7; font-size: 1.05rem; }
.blog-content h2, .blog-content h3 { margin-top: 1.25rem; }
.blog-content img { max-width: 100%; height: auto; border-radius: 10px; }

/* ===== FINAL OVERRIDES (keep at very end) ===== */

/* If you never want the text "Flax Lignan Health" to appear */
.logo-text { display: none !important; }

/* Force Inter on the top nav, regardless of component CSS or load order */
header nav a,
header .nav a,
.site-header nav a,
nav.primary a,
nav a {
  font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif !important;
  font-weight: 400;
  letter-spacing: 0.02em;
  text-transform: uppercase;
  text-decoration: none;
  color: inherit;
}

/* Ensure hero paragraph is dark */
.hero p { color: black !important; }
