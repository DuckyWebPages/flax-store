---
import BaseLayout from "../layouts/BaseLayout.astro";
import CartIsland from "../components/CartIsland";
import { products } from "../data/products";

const title = "Flax Lignan Health â€” Shop";
---
<BaseLayout>
  <main>
    <style>
      :root { color-scheme: light; }
      body { background:#f8fafc; color:#0f172a; }
      main { max-width: 1100px; margin: 0 auto; padding: 24px 16px 56px; }
      .muted { font-size:12px; color:#64748b; }
      h1 { margin: 0 0 8px; }
    </style>

    <h1>Flax Lignan Health</h1>
    <p class="muted">Fast, static shop. Payments handled by Stripe.</p>

    <h2 id="products">Products</h2>

    <!-- One React island renders the whole grid + buttons so context is present -->
    <CartIsland client:load products={products} />
  </main>
</BaseLayout>
