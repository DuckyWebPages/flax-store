---
import BaseLayout from '@/layouts/BaseLayout.astro'; // If you don't use the @ alias, change to ../layouts/BaseLayout.astro
import ShopApp from '@/components/ShopApp.tsx';      // Or: ../components/ShopApp.tsx
const title = 'Products — Flax Lignan Health';
---

<BaseLayout>
  <header class="products-header">
    <h1 class="products-title">Products</h1>
  </header>

  <main class="products-page">
    <!-- Mount on client only to avoid SSR errors -->
    <ShopApp client:only="react" />
  </main>

  <style>
    :root {
      --font-body: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      --font-head: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      --ink: #0f172a;
    }

    .products-header {
      max-width: 1100px; margin: 0 auto; padding: 0 16px 8px;
      border-bottom: 1px solid #e5e7eb;
    }
    .products-title {
      font-family: var(--font-head);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: 1.15;
      margin: 0.5rem 0 0.25rem;
      color: var(--ink);
      font-size: clamp(1.8rem, 3.8vw, 2.4rem);
    }

    /* === FONT OVERRIDES FOR THE ENTIRE SHOP AREA === */
    .products-page {
      max-width: 1100px; margin: 0 auto; padding: 1rem 16px 3rem;
      font-family: var(--font-body);
      color: var(--ink);
    }

    .products-page :where(p, li, span, div, td, th, input, select, textarea, label, a) {
      font-family: var(--font-body);
    }

    .products-page :where(h1, h2, h3, h4, h5, h6) {
      font-family: var(--font-head);
      letter-spacing: -0.01em;
      line-height: 1.15;
    }
    .products-page h1 { font-weight: 700; }
    .products-page h2, .products-page h3, .products-page h4 { font-weight: 600; }

    .products-page :where(button, [role="button"], .button) {
      font-family: var(--font-body);
      font-weight: 600;
    }
    .products-page :where(input, select, textarea) {
      font-family: var(--font-body);
    }

