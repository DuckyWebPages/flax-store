---
import type { Product } from "@/data/products";
import { products } from "../data/products";
import ShopApp from "../components/ShopApp";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Products | Flax Lignan Health</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body class="min-h-screen">
    <!-- HEADER (logo + nav) -->
    <header style="max-width:1100px;margin:1rem auto;padding:0 1rem;">
      <div style="display:flex;align-items:center;gap:24px;justify-content:flex-start;">
        <a href="/" style="display:inline-flex;align-items:center;gap:.5rem;text-decoration:none;color:inherit">
          <img src="/images/logo.png" alt="Flax Lignan Health" style="height:40px;width:auto;display:block" />
        </a>
        <nav style="display:flex;gap:16px;font-weight:700;">
          <a href="/">Home</a>
          <a href="/products">Products</a>
        </nav>
      </div>
    </header>

    <main style="max-width:1100px;margin:2rem auto;padding:0 1rem;">
      <h1 style="font-size:2rem;margin-bottom:1rem;">Products</h1>

      <!-- ONE React island that wraps grid with CartProvider -->
      <ShopApp client:load products={products} />
    </main>
  </body>
</html>
