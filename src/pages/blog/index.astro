---
import BaseLayout from '../layouts/BaseLayout.astro';
const title = "Flax Lignan Health — Home";
---

<BaseLayout>
  <!-- Hero -->
  <section class="hero">
    <div class="hero-bg" role="img" aria-label="Healthy flax and natural products background"></div>

    <!-- Left vertical quick-action buttons -->
    <nav class="quick-actions" aria-label="Quick actions">
      <a href="/products" class="qa-btn">Shop</a>
      <a href="tel:18177106918" class="qa-btn">Call</a>
      <a href="/blog" class="qa-btn">Blog</a>
    </nav>

    <div class="hero-inner">
      <h1 class="site-title">Flax Lignan Health</h1>
      <p>
        Your research-driven source for natural products promoting health, vitality and immune system support.<br />
        <strong>Order online or call <a href="tel:18177106918">817-710-6918</a> to speak to customer service.</strong>
      </p>
    </div>
  </section>

  <!-- Blog Update (with flax flower image) -->
  <div class="blog-update-wrap">
    <a href="/blog" class="blog-update">
      <img class="blog-icon" src="/images/flax-flower.png" alt="Flax flower" />
      <span>Read our latest blog update</span>
    </a>
  </div>

  <style>
    /* ===== HERO ===== */
    .hero {
      position: relative;
      isolation: isolate;
      min-height: clamp(380px, 60vh, 620px);
      display: grid;
      align-items: center;
      padding: 48px 16px;
      border-bottom: 1px solid #e5e7eb;
    }
    .hero-bg {
      position: absolute;
      inset: 0;
      background-image: url('/images/hero-1600.jpg');
      background-size: cover;
      background-position: center;
      z-index: -1;
    }
    .hero-inner {
      max-width: 1100px;
      width: 100%;
      margin: 0 auto;
      color: #0f172a;
    }
    h1.site-title {
      font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-size: clamp(2.2rem, 4.2vw, 3.2rem);
      font-weight: 700;
      letter-spacing: -0.01em;
      line-height: 1.1;
      color: #000;
    }
    .hero p {
      font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-weight: 300;
      line-height: 1.6;
      font-size: clamp(1rem, 1.2vw + .8rem, 1.125rem);
      color: #000;
      max-width: 720px;
      margin-top: .6rem;
    }
    .hero p a { color: inherit; text-decoration: underline; }

    /* Left-side vertical buttons — match pill/black style */
    .quick-actions {
      position: absolute;
      left: 18px;
      top: 50%;
      transform: translateY(-50%);
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
    .qa-btn {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 16px;           /* same as CTA */
      border-radius: 999px;         /* pill shape */
      background: #111827;          /* black, same as CTA */
      color: #fff;
      border: 1px solid #111827;
      font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-weight: 600;
      line-height: 1;
      text-decoration: none;
      box-shadow: 0 4px 14px rgba(0,0,0,.08);
      transition: transform .08s ease, opacity .15s ease, background-color .15s ease, border-color .15s ease;
      user-select: none;
      -webkit-tap-highlight-color: transparent;
      white-space: nowrap;
    }
    .qa-btn:hover { opacity: .9; }
    .qa-btn:active { transform: translateY(1px); }

    @media (max-width: 768px) {
      .quick-actions { display: none; } /* hide to prevent overlap on mobile */
      .hero { padding: 36px 16px; }
    }

    /* ===== BLOG UPDATE ===== */
    .blog-update-wrap { text-align: center; margin: 2rem 0; }
    .blog-update {
      display: inline-flex;
      align-items: center;
      gap: 12px;
      font-family: 'Source Sans 3', 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      font-weight: 600;
      letter-spacing: 0.02em;
      font-size: clamp(1.3rem, 2.8vw, 1.8rem);
      line-height: 1;
      text-decoration: none;
      color: inherit;
    }
    .blog-update:hover { text-decoration: underline; opacity: .95; }
    .blog-icon {
      width: 1.6em;
      height: 1.6em;
      display: inline-block;
      flex: 0 0 auto;
      object-fit: contain;
      transform: translateY(0.02em);
    }
  </style>
</BaseLayout>
