---
interface Props {
  href?: string;      // Stripe Checkout link, e.g. https://buy.stripe.com/test_xxx
  label?: string;     // Button text
  class?: string;     // Optional class passthrough
}

const { href, label = 'Buy Now', class: className = '' } = Astro.props;
---

{href ? (
  <a href={href} rel="noopener noreferrer" class={className} style="
    display:inline-block;
    text-decoration:none;
    border:1px solid #111827;
    padding:.6rem .9rem;
    border-radius:10px;
  ">
    {label}
  </a>
) : (
  <button type="button" disabled title="Coming soon" class={className} style="
    display:inline-block;
    border:1px solid #9ca3af;
    padding:.6rem .9rem;
    border-radius:10px;
    opacity:.6;
  ">
    {label}
  </button>
)}
